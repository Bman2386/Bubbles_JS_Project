<!DOCTYPE html>
<html>
  <head>
    <title>QuestRabbit</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    
    <% if logged_in? %>
      <script type="text/javascript">
      window.currentUser = {
        "id": <%= current_user.id %>,
        "username": "<%= current_user.username %>"
      }
      </script>
    <% end %>
    <script>
     window.logo = "<%= image_url('QuestRabbit.jpg') %>";
     window.formPhoto = "<%= image_url('formphoto.jpg') %>";
     window.hero = "<%= image_url('hero.jpg') %>";
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
